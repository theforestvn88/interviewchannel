<%= turbo_frame_tag "calendar" do %>
<div class="w-full mt-3 mx-auto px-6" data-controller="calendar">
    <div class="w-full flex justify-between">
        <div class="flex justify-start">

        <% case @display %>
        <% when "daily" %>
            <%= link_to "/cal/daily?shift=-1&date=#{@target_date.strftime('%FT%R')}", method: :get, class: "text-xl text-center mt-4", title: "previous day" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24">
                    <polyline fill="none" stroke="#000" stroke-width="4" points="7 2 17 12 7 22" transform="matrix(-1 0 0 1 24 0)"/>
                </svg>
            <% end %>
            <%= link_to "/cal/daily?shift=1&date=#{@target_date.strftime('%FT%R')}", method: :get, class: "text-xl text-center mt-4 mr-2", title: "next day" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24">
                    <polyline fill="none" stroke="#000" stroke-width="4" points="7 2 17 12 7 22" />
                </svg>
            <% end %>
            <%= form_tag('/cal/daily', method: :get) do %>
                <input name="date" type="datetime-local" data-action="input->calendar#changeDate"
                    value="<%= @target_date.strftime('%FT%R') %>"
                    class="block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full h-10">
            <% end %>
        <% when "weekly" %>
            <%= link_to "/cal/weekly?shift=-1&date=#{@target_date.strftime('%FT%R')}", method: :get, class: "text-xl text-center mt-4", title: "previous week" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24">
                    <polyline fill="none" stroke="#000" stroke-width="4" points="7 2 17 12 7 22" transform="matrix(-1 0 0 1 24 0)"/>
                </svg>
            <% end %>
            <%= link_to "/cal/weekly?shift=1&date=#{@target_date.strftime('%FT%R')}", method: :get, class: "text-xl text-center mt-4 mr-2", title: "next week" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24">
                    <polyline fill="none" stroke="#000" stroke-width="4" points="7 2 17 12 7 22" />
                </svg>
            <% end %>
            <span class="mt-4"><%= @target_date.strftime('Week %U (%B %Y)') %></span>
        <% when "monthly" %>
            <%= link_to "/cal/monthly?shift=-1&date=#{@target_date.strftime('%FT%R')}", method: :get, class: "text-xl text-center mt-4", title: "previous month" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24">
                    <polyline fill="none" stroke="#000" stroke-width="4" points="7 2 17 12 7 22" transform="matrix(-1 0 0 1 24 0)"/>
                </svg>
            <% end %>
            <%= link_to "/cal/monthly?shift=1&date=#{@target_date.strftime('%FT%R')}", method: :get, class: "text-xl text-center mt-4 mr-2", title: "next month" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="0 0 24 24">
                    <polyline fill="none" stroke="#000" stroke-width="4" points="7 2 17 12 7 22" />
                </svg>
            <% end %>
            <span class="mt-4"><%= @target_date.strftime('%B %Y') %></span>
        <% end %>

        </div>
        <div class="flex justify-end">
            <div class="pt-2 relative mx-auto text-gray-600">
                <input class="border-1 border-gray-300 bg-white h-10 px-5 pr-16 rounded-lg text-sm focus:outline-none"
                type="search" name="search" placeholder="Search" hidden>
                <button type="submit" class="absolute right-0 top-0 mt-5 mr-4">
                <svg class="text-gray-600 h-4 w-4 fill-current" xmlns="http://www.w3.org/2000/svg"
                    xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Capa_1" x="0px" y="0px"
                    viewBox="0 0 56.966 56.966" style="enable-background:new 0 0 56.966 56.966;" xml:space="preserve"
                    width="512px" height="512px">
                    <path
                    d="M55.146,51.887L41.588,37.786c3.486-4.144,5.396-9.358,5.396-14.786c0-12.682-10.318-23-23-23s-23,10.318-23,23  s10.318,23,23,23c4.761,0,9.298-1.436,13.177-4.162l13.661,14.208c0.571,0.593,1.339,0.92,2.162,0.92  c0.779,0,1.518-0.297,2.079-0.837C56.255,54.982,56.293,53.08,55.146,51.887z M23.984,6c9.374,0,17,7.626,17,17s-7.626,17-17,17  s-17-7.626-17-17S14.61,6,23.984,6z" />
                </svg>
                </button>
            </div>
            <div class="w-38 h-10 mr-1 mt-3 py-0 flex justify-between align-middle border-2 border-gray-400 rounded-md">
                <%= button_to "Day", calendar_daily_path, method: :get, class: "w-12 h-full text-sm text-center border-r-2 border-gray-200 #{@display == 'daily' ? 'bg-gray-100' : ''}" %>
                <%= button_to "Week", calendar_weekly_path, method: :get, class: "w-12 h-full text-sm text-center border-r-2 border-gray-200 #{@display == 'weekly' ? 'bg-gray-100' : ''}" %>
                <%= button_to "Month", calendar_monthly_path, method: :get, class: "w-12 h-full text-sm text-center #{@display == 'monthly' ? 'bg-gray-100' : ''}" %> 
            </div>
        </div>
    </div>
    
    <%= render "interviews/#{@display}" %>                            
</div>
<% end %>