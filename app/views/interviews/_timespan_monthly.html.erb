<div id="interview-<%= interview.id %>-timespan-monthly<%= tz_offset %>" 
    class="m-2 text-xs <%= color %>_tag absolute left-0 top_<%= top %>"
    data-controller="card"
    data-action="mouseenter->card#show mouseleave->card#hide mousedown->card#hide"
    data-card-url-value="<%= card_interview_path(interview.id) %>"
    draggable="true" droppable="false" data-id="<%= interview.id %>">
    <% if action == :create  or action == :update %>
        <%= turbo_stream_from interview %>
    <% end %>

    <%= link_to text, interview_path(interview.id), data: {turbo_frame: "home-content"}, class: "bg-red-200 text-xs block hover:text-blue-600", "draggable": "false", "droppable": "false" %>
    <%= render template: "interviews/card", locals: {timezone: "UTC", interview: interview} %>
</div>