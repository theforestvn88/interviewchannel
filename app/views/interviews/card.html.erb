<% interview = interview || @interview %>
<% cache interview do %>
  <div class="relative" data-card-target="card" id="card-<%= interview.id %><%= tz_offset %>" droppable="false">
    <div data-tooltip-arrow class="absolute bottom-8 left-0 z-50 bg-white shadow-lg drop-shadow-lg rounded-lg p-2 min-w-max-content text-xs">
      <div class="text-gray-400 space-x-3 items-center w-64">
          <p class="font-bold"><%= show_state(interview) %><%= interview.title %></p>
          <p>Interviewer: <span class="font-bold"><%= interview.interviewer.name %></span><span class="ml-1"><%= interview.interviewer.email %></span></p>
          <p>Candidate: <span class="font-bold"><%= interview.candidate.name %></span><span class="ml-1"><%= interview.candidate.email %></span></p>
          <p>Round: <%= interview.round %></p>
          <p>Start Time: <span class="font-bold"><%= interview.start_time.in_time_zone(timezone).strftime('%F %R') %></span></p>
          <p>End Time: <span class="font-bold"><%= interview.end_time.in_time_zone(timezone).strftime('%F %R') %></span></p>
      </div>
    </div>
  </div>
<% end %>