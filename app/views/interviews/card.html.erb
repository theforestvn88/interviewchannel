<% interview = interview || @interview %>
<% cache interview do %>
  <div class="relative" data-card-target="card" id="card-<%= interview.id %>" droppable="false">
    <div data-tooltip-arrow class="absolute bottom-8 left-0 z-50 bg-white shadow-lg drop-shadow-lg rounded-lg p-2 min-w-max-content text-xs">
      <div class="text-gray-400 space-x-3 items-center w-64">
          <p class="font-bold"><%= show_state(interview) %><%= interview.title %></p>
          <p>Round: <%= interview.round %></p>
          <p>Interviewers: 
              <% interview.interviewers.each do |interviewer| %>
                  <span class="ml-1"><%= interviewer.name %></span><span class="mr-1 font-light"><%= "<#{interviewer.email}>, " %></span>
              <% end %>
          </p>
          <p>Candidate: <span class="ml-1"><%= interview.candidate.name %></span><span class="ml-1 font-light"><%= "<#{interview.candidate.email}>" %></span></p>
          <p>Start Time: <span><%= interview.start_time.in_time_zone(timezone).strftime('%F %R %:z') %></span></p>
          <p>End Time: <span><%= interview.end_time.in_time_zone(timezone).strftime('%F %R %:z') %></span></p>
      </div>
    </div>
  </div>
<% end %>