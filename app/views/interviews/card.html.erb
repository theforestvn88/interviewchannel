<div class="relative" data-card-target="card" id="<%= card_interview_path(@interview.id) %>">
  <div data-tooltip-arrow class="absolute bottom-8 left-0 z-50 bg-white shadow-lg rounded-lg p-2 min-w-max-content">
    <div class="text-gray-400 space-x-3 items-center w-64">
        <p class="font-bold"><%= @interview.note %></p>
        <p>Start Time: <span class="font-bold"><%= @interview.start_time.strftime("%I:%M %p") %></span></p>
        <p>End Time: <span class="font-bold"><%= @interview.end_time.strftime("%I:%M %p") %></span></p>
        <p>Interviewer: <span class="font-bold"><%= @interview.interviewer.name %></span></p>
        <p>Candidate: <span class="font-bold"><%= @interview.candidate.name %></span></p>
    </div>
  </div>
</div>