<%= turbo_frame_tag "reply-#{applying.id}" do %>
    <div class="ml-2 text-blue-600 text-xs flex justify-start">
    <% if applying.open? %>
            <%= link_to "reply", new_applying_reply_path(applying) %>
        <% if applying.control_by?(user) %>
                <%= link_to " | create interview", 
                    new_interview_path(candidate_id: applying.candidate_id, applying_id: applying.id), 
                    data: {turbo_frame: :modal}, class: "ml-1" %>
                <%= button_to " | close", close_applying_path(applying), form: {class: "ml-1"} %>
        <% end %>
    <% else %>
        <h3 class="text-red-700 font-bold">closed<h3>
        <% if applying.control_by?(user) %>
            <%= button_to "reopen", open_applying_path(applying), form: {class: "ml-1 text-xs text-blue-600"} %>
        <% end %>
    <% end %>
    </div>
<% end %>