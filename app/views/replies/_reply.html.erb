<% if reply.time_milestone? %>
    <div class="py-2">
      <div class="absolute w-2 h-2 bg-gray-400 rounded-full mt-1.5 -left-1 border border-white dark:border-gray-500 dark:bg-gray-500"></div>
      <time class="text-xs font-normal leading-none text-gray-400 dark:text-gray-500">
        <span class="mx-2 mt-2"><%= reply.created_at.in_time_zone(timezone).strftime('%F %R %:z') %></span> 
      </time>
      <div class="ml-2"><%= reply.content.html_safe %></div>
    </div>
<% else %>
    <div class="w-full ml-2 my-1">
        <p><%= reply.content.html_safe %> - <span class="text-blue-400"><%= reply.user.name %></span> <span class="font-light"><%= "#{distance_of_time_in_words(reply.created_at, Time.now.utc)} ago." %></span></p>
    </div>

    <% if defined?(separator) && separator %>
      <hr class="w-1/2 ml-2 my-1">
    <% end %>
<% end %>
