<li class="mt-2 pb-2 ml-4 text-xs">
    <% if reply.milestone? %>
        <div class="absolute w-2 h-2 bg-gray-200 rounded-full mt-1 -left-1 border border-white dark:border-gray-500 dark:bg-gray-500"></div>
        <time class="text-xs font-normal leading-none text-gray-400 dark:text-gray-500"><%= reply.created_at.in_time_zone(timezone).strftime('%F %R') %> <%= reply.content.html_safe %></time>
    <% else %>
        <div class="w-1/2">
            <p><%= reply.content.html_safe %> - <span class="text-blue-400"><%= reply.user.name %></span> <span class="font-light"><%= "#{distance_of_time_in_words(reply.created_at, Time.now.utc)} ago." %></span></p>
        </div>
    <% end %>
</li>