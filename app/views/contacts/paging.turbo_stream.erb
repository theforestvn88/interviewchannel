<%= turbo_stream.append contacts_list_frame_id(current_user) do %>
    <%= render @contacts %>
<% end %>

<%= turbo_stream.replace "load_more_contacts" do %>
  <% if @next_offset %>
    <%= turbo_frame_tag "load_more" do %>
        <%= button_to "load more", paging_contacts_path(offset: @next_offset), class: "text-xs text-blue-600" %>
    <% end %>
  <% end %>
<% end %>