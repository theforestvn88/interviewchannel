<div id="<%= dom_id message %>" class="mb-5 text-xs">
    <p>
        <span>by <%= message.owner.name %> | </span> <span><%= distance_of_time_in_words(message.updated_at, Time.now.utc) %> ago | <%= message.views %> <%= 'view'.pluralize(message.views) %></span>
    </p>
    
    <p><span class="font-bold"><%= message.channel %></span></p>

    <textarea class="mt-5 w-full" rows="10" disabled>
        <%= message.content %> 
    </textarea>

    <% if message.user_id == current_user&.id %>
        <div class="flex justify-end">
            <span><%= button_to "Edit", edit_message_path(message), method: :get, data: {"turbo-frame": "modal"}, class: "hover:font-bold" %></span>
            <span class="mx-1"> | </span>
            <span><%= button_to "Delete", message_path(message), method: :delete, form: { data: {turbo_confirm: "are you sure ?"} }, class: "hover:font-bold" %></span>
        </div>
    <% else %>
        <div class="flex justify-end hover:underline">
            <%= link_to "Apply Now", new_message_applying_path(message), data: {"turbo-frame": "modal"} %>
        </div>
    <% end %>
</div>