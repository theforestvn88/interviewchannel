<%= form_with(model: message, class: "w-full text-xs") do |form| %>
  <% if message.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
        <% message.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.text_area :content, rows: 7, placeholder: "content: in code we trust ...", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", 
        "data-message-target": "content" %>
  </div>

  <div class="my-5">
    <%= form.text_field :channel, placeholder: "channel: #Backend #FrontEnd ...", value: message.channel || params[:tag],
        class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full",
        "data-message-target": "channel" %>
  </div>

  <div class="inline">
    <%= form.submit "Submit", class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
