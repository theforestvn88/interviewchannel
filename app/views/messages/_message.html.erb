<%= link_to message_path(message), id: dom_id(message), class: "mb-5 text-xs", data: {"turbo-frame": "modal"} do %>
  <p class="font-bold inline-block hover:bg-green-200">
    <%= message.content[0..78] + "..." %> </span> <span class="font-bold"><%= message.channel %></span>
  </p>
  <p><span>by <%= message.owner.name %> | <span><%= message.updated_at %></span></p>
  <%= turbo_stream_from message %>
<% end %>