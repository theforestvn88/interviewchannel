
<div class="py-2 bg-zinc-100">
    <div class="container mx-auto px-6" data-controller="message">
        <p class="font-bold">Recently Messages</p>
        <p data-action="click->message#recently" class="hover:cursor-pointer hover:bg-green-300">recently</p>
        <% @tags.each do |(tag, count)| %>
            <%= button_to "#{tag}(#{count})", query_messages_path(tag: tag) %>
        <% end %>
    </div>
</div>