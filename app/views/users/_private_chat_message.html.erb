<% full_message = "#{sender.name}: #{message}" %>
<% chatroom = "chatroom_#{private_chat_channel}" %>

<template 
  data-controller="chat" 
  data-chat-room-value="<%= chatroom %>"
  data-chat-channel-value="<%= private_chat_channel %>"
  data-chat-message-value="<%= full_message %>"
  data-chat-url-value="<%= private_chat_user_path(sender) %>">
</template>