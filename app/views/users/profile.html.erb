<div class="w-full m-2 sm:m-5">
    <%= render 'layouts/header' %>
    
    <% editable = @user.id == current_user.id %>
    <div class="w-full mt-10 sm:mx-auto sm:p-5 relative sm:flex sm:justify-start">
      <div class="-ml-2 mr-2 sm:sticky sm:top-0 sm:left-0 sm:w-1/3 sm:h-1/3 bg-zinc-100 sm:mr-5 sm:p-2">
        <%= render partial: "users/summary", locals: {user: @user, editable: editable} %>
      </div>

      <div class="-ml-2 mr-2 sm:w-2/3 mt-5 sm:mt-0">
        <div class="bg-white rounded-sm border border-gray-100 bg-zinc-100">
          <%= render partial: "users/cv", locals: {user: @user, editable: editable} %>
        </div>
        
        <%= turbo_frame_tag "by_me", src: by_me_messages_path(user: @user.id, offset: 0), loading: :lazy %>
      </div>
    </div>

    <%= render 'layouts/footer' %>
</div>