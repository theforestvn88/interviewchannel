<div class="w-full m-5">
    <%= render 'layouts/header' %>
    
    <% editable = @user.id == current_user.id %>
    <div class="w-full mt-10 mx-auto p-5 flex justify-start">
      <div class="w-1/3 h-1/3 bg-zinc-100 mr-5 p-5">
        <%= render partial: "users/summary", locals: {user: @user, editable: editable} %>
      </div>

      <div class="w-2/3 bg-white rounded-sm border border-gray-500">
        <%= render partial: "users/cv", locals: {user: @user, editable: editable} %>
      </div>
    </div>
</div>