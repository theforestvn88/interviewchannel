<div data-controller="select7" data-select7-suggest-api-value="<%= suggest_tags_path %>" data-select7-attr-value="watch_tag[]">
<%= form_with(url: add_watch_tag_user_path(current_user), class: "mt-3 mb-5 w-full") do |form| %>
    <%= form.label :add_watch_tag %>
    <div class="w-full px-1 py-1">
        <div class="w-full relative">
            <div class="flex justify-start block shadow border border-gray-400 outline-none w-full h-8">
                <div class="flex justify-start pl-1 py-1" data-select7-target="tagsContainer"></div>
                <input data-select7-target="input" data-action="input->select7#suggest", class="border-none outline-none bg-transparent" placeholder="#">
            </div>
            <div data-select7-target="suggestionTags" class="hidden absolute bot-0 left-0 w-full h-30 overflow-y-auto drop-shadow-xl border-b-2 border-x-2 border-gray-200 z-51 bg-white"></div>
        </div>
    </div>
    <%= form.submit "Add", class: "mx-2 h-6 px-1 bg-green-600 text-white inline-block float-right" %>
<% end %>
</div>