<div class="mt-3 relative"
  data-controller="select7"
  data-select7-suggest-api-value="<%= suggest_tags_path %>"
  data-select7-name-value="watch_tag[]"
  data-select7-multiple-value="true">
  <%= form_with(url: add_watch_tag_user_path(current_user), class: "w-full pb-3") do |form| %>

      <div data-select7-target="template" class="hidden border-2 border-gray-300 rounded-md pl-1 mr-1 flex justify-between items-center">
        <span class="text-center text-xs px-1 hover:rounded-full hover:bg-red-200 hover:cursor-pointer" data-action="click->select7#removeTag">x</span>
      </div>

      <div class="flex justify-start block shadow border border-gray-200 outline-none bg-white w-full p-1 overflow-x-auto">
        <div class="flex justify-start" data-select7-target="selected">
        </div>
        <input data-select7-target="input" data-action="input->select7#suggest" class="border-none outline-none">
      </div>
      <div data-select7-target="suggestion" class="hidden absolute bot-0 left-0 w-full h-20 overflow-y-auto drop-shadow-xl border-b-2 border-x-2 border-gray-200 z-50 bg-white"></div>
    
    <%= form.submit "Add Watch-Tags", class: "m-2 h-6 px-1 bg-green-600 text-white inline-block float-right hover:cursor-pointer" %>
  <% end %>
</div>