<% cache @user do %>
    <div class="relative" data-card-target="card" id="card-<%= @user.id %>" droppable="false">
      <div data-tooltip-arrow class="absolute bottom-8 left-0 z-50 bg-white shadow-lg drop-shadow-lg rounded-lg p-2 w-80">
        <%= render partial: "users/summary", locals: {user: @user, editable: false} %>
        <%= turbo_frame_tag "#{@user.id}-card-toolbar" do %>
          <div class="flex justify-start">
            <%= button_to "+ contact", add_contact_user_path(@user), class: "border border-gray-300 rounded-md hover:bg-gray-200 mx-1 p-1" %>
            <%= link_to "chat", private_chat_user_path(@user), data: {turbo_frame: "chat-form"}, class: "border border-gray-300 rounded-md hover:bg-gray-200 mx-1 p-1" %>
          </div>
        <% end %>
      </div>
    </div>
<% end %>