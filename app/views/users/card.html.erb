<% cache @user do %>
    <div class="relative" data-card-target="card" id="card-<%= @user.id %>" droppable="false">
        <div data-tooltip-arrow class="absolute bottom-8 left-0 z-50 bg-white shadow-lg drop-shadow-lg rounded-lg p-2 min-w-max-content">
            <div class="space-x-3 items-center w-64">
                <h3 class="text-gray-500 font-bold"><%= @user.name %></h3>
                <h3 class="text-gray-500"><%= @user.email %></h3>
                <h3 class="text-gray-500"><%= (@user.watch_tags || "")[0..100] %></h3>
            </div>
        </div>
    </div>
<% end %>