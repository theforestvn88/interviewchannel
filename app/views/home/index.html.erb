<div class="w-full m-5">
  <div class="w-full flex justify-between">
    <%= render 'layouts/header' %>
  </div>
  <% if user_signed_in? %>
    <div class="w-full mt-5 flex justify-between border-t-2 border-gray-300">
      <div class="w-72 mt-5">
        <%= turbo_stream_from @private_channel %>
        <%= turbo_stream_from :messages %>
        <%= render 'interviews/summary' %>
        <hr class="my-2">
        <%= render 'messages/summary' %>
      </div>
      <%= render template: 'messages/index' %>
    </div>
  <% else %>
    <%= render 'layouts/intro' %>
  <% end %>
</div>
